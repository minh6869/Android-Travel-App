<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Booking ID and Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Id: "
                android:textColor="#757575"
                android:fontFamily="@font/sora"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPendingBookingId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1747564638"
                android:fontFamily="@font/sora"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPendingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="775.000 VND"
                android:fontFamily="@font/sora"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tour Name -->
        <TextView
            android:id="@+id/tvPendingTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ba Na Hills (Vietnam Golden Bridge)"
            android:fontFamily="@font/sora"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Payment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Payment within 01:45:00"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sora"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/blue"
            android:layout_gravity="start" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
